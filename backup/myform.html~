
        <!-- Lang -->
        <div class="form-group" ng-repeat="l in form.lang">

                <label for="{{l.id}}" class="col-sm-2 control-label">
                    {{l.lang|translate}} : 
                </label>
                
                
                <div class="col-sm-10">
                
                    <input id="{{l.id}}" type="checkbox" ng-model='resource[l.id]'>
                    
                </div>

        </div>



        <!-- Generic Field -->
        <div
            ng-repeat="field in form.fields"
            ng-switch="isMulltyLang(field)"
            ng-show="showIf(field)"
        >

            <div ng-switch-when="true">

                <myfield
                    ng-repeat='_id in field.id'
                    ng-show="resource[_id.lang]"
                    data-resource="resource"
                    data-label="{{field.label|translate}} ({{_id.lang}})"
                    data-field-id="{{_id.id}}"
                    data-type="{{field.type}}"
                    data-choices="field.choices"
                    data-files="field.files"
                    data-filetype="field.filetype"
                    data-branche-name="field.brancheName"
                />

            </div>

            <div ng-switch-default>
                <myfield
                    data-resource="resource"
                    data-label="{{field.label}}"
                    data-field-id="{{field.id}}"
                    data-type="{{field.type}}"
                    data-choices="field.choices"
                    data-files="field.files"
                    data-filetype="field.filetype"
                    data-branche-name="field.brancheName"
                />
            </div>

        </div>

