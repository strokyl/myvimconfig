angular.module('Ngwis.Filter', []).filter('fileSize', function() {
    return function(size) {
        var unit = ['octet', 'ko', 'Mo', 'Go', 'To'];
        var i = 0;
        while(size >= 1000 && i < unit.length - 1) {
            i++;
            size = size/1000;
        }

        var intSize = Math.floor(size);
        var rest = (size - intSize + "")[2];
        if(rest) {
            return intSize + "." + rest + unit[i];
        } else {
            return intSize +  unit[i];
        }
    };
});
