    <label for="{{fieldId}}" class="col-sm-2 control-label">
        {{label|translate}}
    </label>


    <div class="col-sm-10" ng-switch="type">
        <mydatepicker ng-switch-when="date"
            data-input-id="{{fieldId}}"
            name="{{label}}"
            data-date="resource[fieldId]"
        />
        
        <!-- Liste -->
        <select ng-switch-when="liste"
            name="{{fieldId}}"
            id="{{fieldId}}"
            class="form-control"
            ng-options="item for item in choices"
            ng-model="resource[fieldId]"
        />

        <!-- Html -->
        <textarea ng-switch-when="html"
            data-ng-model="resource[fieldId]"
            data-ui-tinymce
            class="form-control"
            name="{{fieldId}}"
            id="{{fieldId}}"
        >
        </textarea>

        <!-- Textarea -->
        <textarea
            ng-switch-when="textarea"
            data-ng-model="resource[fieldId]"
            type="text"
            class="form-control"
            name="{{fieldId}}"
            id="{{fieldId}}"
        >
        </textarea>

        <!-- Gallery -->
        <div ng-switch-when="gallery">

            <div class="col-sm-2">

                <button
                    type="button"
                    id="{{fieldId}}"
                    class="btn btn-default"
                    data-ng-click="openGallerie(fieldId, files, brancheName, filetype)"
                    ng-switch='filetype'
                >

                    <span ng-switch-when='video' translate>gallery.chooseVideo</span>
                    <span ng-switch-when='image' translate>gallery.choosePicture</span>
                    <span ng-if="imageWidth">({{imageWidth}}px)</span>
                </button>

            </div>

            <!--  AperÃ§u de la vignette -->
            <div class="imageForm col-sm-8" ng-switch="filetype">
                <img src="{{resource[fieldId].url}}" style="max-width: 500px" ng-switch-when="image" tooltip="{{resource[fieldId].name}} {{resource[fieldId].width}}x{{resource[fieldId].height}} {{resource[fieldId].size | fileSize}}"/>

                <div ng-switch-when="video">
                    <myvideo src="{{resource[fieldId].url}}" />
                </div>


                </div>

            </div>

            <!-- Checkbox -->
            <input ng-switch-when="checkbox"
            id="{{fieldId}}"
            type="checkbox"
            ng-model='resource[fieldId]'
            />


            <!-- Text -->
            <input ng-switch-default
            id="{{fieldId}}"
            type="{{type}}"
            class="form-control"
            ng-model='resource[fieldId]'
            />
        </div>

    </div>
